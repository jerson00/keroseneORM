
@{
    ViewBag.Title = "Ediit";
}

<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Editar estadio</div>
            <div class="panel-body">
                <div class="col-md-10 col-md-offset-2">
                    <form class="form-horizontal" action="/estadios/edit/@ViewBag.id" method="post">
                        @{
                            foreach (var dataEstadio in ViewBag.estadios)
                            {
                                <input type="hidden" name="name" value="@dataEstadio.id" />
                                <div class="form-group">
                                    <p>Nombre del estadio</p>
                                    <input class="form-control" type="text" name="nombre" placeholder="Nombre" value="@dataEstadio.nombre" />
                                </div>
                                <div class="form-group">
                                    <p>Localidad</p>
                                    <input class="form-control" type="text" name="localidad" placeholder="Localidad" value="@dataEstadio.localidad" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary" value="Actualizar">
                                </div>
                            }
                        }

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

