@model KeroseneORMPresetation.Models.Estadio

@{
    ViewBag.Title = "Registrar estadio";
}

<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Registrar un nuevo estadio</div>
            <div class="panel-body">
                <div class="col-md-10 col-md-offset-2">
                    <form class="form-horizontal" action="/estadios/create" method="post">
                        <div class="form-group">
                            <p>Nombre del estadio</p>
                            <input class="form-control" type="text" name="nombre" placeholder="Nombre" />
                        </div>
                        <div class="form-group">
                            <p>Localidad</p>
                            <input class="form-control" type="text" name="localidad" placeholder="Localidad" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Guardar">
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>